@model ProductModel
@{
    if (Model != null)
        TempData["Title"] = $"{Model.Title} Details";

    string img1 = Model.Img1 ?? this.GetDefaultImage();
    string img2 = Model.Img2 ?? this.GetDefaultImage();
    string img3 = Model.Img3 ?? this.GetDefaultImage();

}

@if (Model != null)
{
<div class="col-md-12 col-sm-3 centerDiv container">
    <div class="card" id="cardExtension">
        <div class="row centerDiv">
            <div id="carouselExampleControls" class="col-sm-10 carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="productImgAtSale d-block w-100" src="@img1">
                    </div>
                    <div class="carousel-item">
                        <img class="productImgAtSale d-block w-100" src="@img2">
                    </div>
                    <div class="carousel-item">
                        <img class="productImgAtSale d-block w-100" src="@img3">
                    </div>
                </div>
                <a class="arrowImg carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="arrowImg carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <div id="lowerDivDetails">
                <aside class="col-sm-10">
                    <article class="card-body p-5">
                        <h3 class="title mb-3">@Model.Title</h3>
                        <dl class="param param-feature">
                            <dd>@Model.ShortDescription</dd>
                        </dl>
                        <p class="price-detail-wrap">
                            <span class="price h3 text-warning">
                                <span class="currency">$</span><span class="num">@Model.Price</span>
                            </span>
                        </p>
                        <dl class="param param-feature">
                            <dt>Published</dt>
                            <dd>@Model.Date.ToString()</dd>
                        </dl>
                        <dl class="item-property">
                            <dt>Description</dt>
                            <dd>
                                <p>
                                    @Model.LongDescription
                                </p>
                            </dd>
                        </dl>
                        @if (Model.Owner != null)
                        {
                            <dl class="param param-feature">
                                <dt>Owner Name</dt>
                                <dd>@Model.Owner.FirstName @Model.Owner.LastName</dd>
                            </dl> <!-- item-property-hor .// -->
                            <dl class="param param-feature">
                                <dt>User Email</dt>
                                <dd>@Model.Owner.Email</dd>
                            </dl> <!-- item-property-hor .// -->
                        }
                        <form method="post" asp-controller="Home" asp-action="AddToCart">
                            <input type="hidden" id="productDetailsId" name="Id" value="@Model.Id" />
                            <input type="hidden" value="@false" name="goToCart" class="goToCart" />
                            <button id="AddToCartBtn" class="btn btn-lg btn-primary text-uppercase">Add To Wish List</button>
                        </form>
                        <form method="get">
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-lg btn-outline-primary text-uppercase"> <i class="fas fa-shopping-cart"></i>Back</a>

                        </form>
                    </article> <!-- card-body.// -->
                </aside>
            </div>
            <!-- col.// -->
        </div> <!-- row.// -->
    </div> <!-- card.// -->


</div> <!--container.//-->



}

@*@section Scripts{
    <script src="~/js/ProductDetails.js"></script>
}*@

